<%- include('./layout/header') %>
    <%- include('./components/navbar') %>
        <main>
            <div class="container-fluid">
                <div class="row">
                    <%- include('./components/aside') %>
                        <div class="col-md-10 bg-light py-3">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="bg-white rounded shadow mb-3">
                                        <div class="uk-h4 my-0 p-3 border-bottom border-muted point-control" uk-toggle="target: #uikit-input">
                                            Input Style
                                            <span class="fa fa-angle-down float-right"></span>
                                        </div>
                                        <div id="uikit-input" class="p-3 uk-animation-fade">
                                            <fieldset class="uk-fieldset">
                                                <div class="uk-margin">
                                                    <input class="uk-input" type="text" placeholder="Input">
                                                </div>

                                                <div class="uk-margin">
                                                    <select class="uk-select">
                                                        <option>Option 01</option>
                                                        <option>Option 02</option>
                                                    </select>
                                                </div>

                                                <div class="uk-margin">
                                                    <textarea class="uk-textarea" rows="5" placeholder="Textarea"></textarea>
                                                </div>

                                            </fieldset>
                                        </div>
                                    </div>
                                    <div class="bg-white rounded shadow mb-3">
                                        <div class="uk-h4 my-0 p-3 border-bottom border-muted point-control" uk-toggle="target: #input-ver">
                                            Input Size
                                            <span class="fa fa-angle-down float-right"></span>
                                        </div>
                                        <div id="input-ver" class="p-3 uk-animation-fade">
                                            <div class="uk-margin">
                                                <input class="uk-input uk-form-large" type="text" placeholder="Large">
                                            </div>

                                            <div class="uk-margin">
                                                <input class="uk-input" type="text" placeholder="Default">
                                            </div>

                                            <div class="uk-margin">
                                                <input class="uk-input uk-form-small" type="text" placeholder="Small">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="bg-white rounded shadow mb-3">
                                        <div class="uk-h4 my-0 p-3 border-bottom border-muted point-control" uk-toggle="target: #uikit-color">
                                            Input Color
                                            <span class="fa fa-angle-down float-right"></span>
                                        </div>
                                        <div id="uikit-color" class="p-3 uk-animation-fade">
                                            <div class="uk-margin">
                                                <input class="uk-input uk-form-danger" type="text" placeholder="form-danger" value="form-danger">
                                            </div>

                                            <div class="uk-margin">
                                                <input class="uk-input uk-form-success" type="text" placeholder="form-success" value="form-success">
                                            </div>

                                            <div class="uk-margin">
                                                <input class="uk-input" type="text" placeholder="disabled" value="disabled" disabled>
                                            </div>

                                            <div class="uk-margin">
                                                <input class="uk-input border border-dark" type="text" placeholder=".border.border-dark">
                                            </div>
                                            <div class="uk-margin">
                                                <input class="uk-input border border-success" type="text" placeholder=".border.border-success">
                                            </div>
                                            <div class="uk-margin">
                                                <input class="uk-input border border-info" type="text" placeholder=".border.border-info">
                                            </div>
                                            <div class="uk-margin">
                                                <input class="uk-input border border-danger" type="text" placeholder=".border.border-danger">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
            </div>
        </main>
        <%- include('./layout/footer') %>